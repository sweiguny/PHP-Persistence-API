{
    "name": "sweiguny/php-persistence-api",
    "type": "library",
    "description": "Interface for PHP-Applications to access Object-Relational data. ",
    "keywords": ["orm", "dbal"],
    "homepage": "https://github.com/sweiguny/PHP-Persistence-API",
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Weiguny",
            "email": "s.weiguny@gmail.com",
            "role": "Developer"
        }
    ],
    
    "require": {
        "php": ">=7.0.0",
        "symfony/dependency-injection": "^3.3",
        "symfony/event-dispatcher": "^3.3",
        "doctrine/orm": "v2.5.6",
        "doctrine/dbal": "v2.5.12"
    },
    "require-dev": {
        "phpunit/phpunit": "6.2",
        "phpunit/dbunit": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PPA\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PPA\\tests\\bootstrap\\": "tests/bootstrap/",
            "PPA\\tests\\": "tests/PPA/"
        }
    }
}
