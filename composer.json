{
    "name": "sweiguny/php-persistence-api",
    "type": "library",
    "description": "Interface for PHP-Applications to access Object-Relational data.",
    "keywords": ["orm", "dbal"],
    "homepage": "https://github.com/sweiguny/PHP-Persistence-API",
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Weiguny",
            "email": "s.weiguny@gmail.com",
            "role": "Developer"
        }
    ],
    
    "require": {
        "php": ">=7.0.0",
        "symfony/dependency-injection": "^4",
        "symfony/event-dispatcher": "^4",
        "symfony/finder": "^4.0",
        "latitude/latitude": "^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "6.2",
        "phpunit/dbunit": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PPA\\": "src/"
        },
        "files": [
            "src/dbal/query/builder/AST/AST_globFactories.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PPA\\tests\\bootstrap\\": "tests/bootstrap/",
            "PPA\\tests\\": "tests/PPA/"
        }
    }
}
